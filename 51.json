{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["lua-types/5.1", "@types/wow-api"],
    "typeRoots": ["node_modules/@types"]
  },
  "tstl": {
    "luaTarget": "JIT",
    "luaLibImport": "none",
    "noHeader": true
  },
  "noResolve": false
}
